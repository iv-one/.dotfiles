[user]
	name = Ivan Diachenko
	email = ivan.dyachenko@gmail.com

[alias]
    st = status
    cm = !git add --all . && git commit
    ci = !git add --all . && git commit -m
    co = checkout
    master = !git checkout master
    p = fetch -p origin
    rmb = !"git branch | grep -v "master" | xargs git branch -D"
    br = for-each-ref --sort=committerdate refs --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'

[core]
    editor = vim
    autocrlf = input
    pager = diff-so-fancy | less --tabs=4 -RFX

[push]
    default = matching

[diff-so-fancy]
    markEmptyLines = false

[merge]
    tool = vimdiff

[mergetool]
    prompt = true

[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[difftool]
    prompt = false

[diff]
    tool = vimdiff

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = blue
    untracked = cyan
